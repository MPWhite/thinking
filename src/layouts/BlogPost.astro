---
interface Props {
  title: string;
  description: string;
  date: Date;
}

const { title, description, date } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    :root {
      --bg: #ffffff;
      --text: #1a1a1a;
      --text-secondary: #666666;
      --accent: #0066cc;
      --border: #e5e5e5;
      --code-bg: #f5f5f5;
      --code-text: #1a1a1a;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #0f0f0f;
        --text: #e5e5e5;
        --text-secondary: #999999;
        --accent: #3b9eff;
        --border: #2a2a2a;
        --code-bg: #1a1a1a;
        --code-text: #e5e5e5;
      }
    }

    html {
      font-size: 16px;
    }

    body {
      background: var(--bg);
      color: var(--text);
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
      line-height: 1.7;
      transition: background 0.3s ease, color 0.3s ease;
      min-height: 100vh;
    }

    .container {
      max-width: 680px;
      margin: 0 auto;
      padding: 4rem 1.5rem;
    }

    header {
      margin-bottom: 4rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid var(--border);
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      color: var(--text-secondary);
      text-decoration: none;
      font-size: 0.9rem;
      font-weight: 500;
      margin-bottom: 2rem;
      transition: color 0.2s ease;
    }

    .back-link:hover {
      color: var(--accent);
    }

    .back-link::before {
      content: "‚Üê";
      margin-right: 0.5rem;
      font-size: 1.2rem;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 700;
      letter-spacing: -0.03em;
      margin-bottom: 1rem;
      line-height: 1.2;
    }

    time {
      display: block;
      color: var(--text-secondary);
      font-size: 0.875rem;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    main {
      font-size: 1.0625rem;
      line-height: 1.75;
    }

    main :global(h1),
    main :global(h2),
    main :global(h3),
    main :global(h4),
    main :global(h5),
    main :global(h6) {
      font-weight: 600;
      line-height: 1.3;
      letter-spacing: -0.02em;
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    main :global(h1) { font-size: 2rem; }
    main :global(h2) { font-size: 1.625rem; }
    main :global(h3) { font-size: 1.375rem; }
    main :global(h4) { font-size: 1.125rem; }

    main :global(p) {
      margin-bottom: 1.5rem;
    }

    main :global(a) {
      color: var(--accent);
      text-decoration: none;
      border-bottom: 1px solid transparent;
      transition: border-color 0.2s ease;
    }

    main :global(a:hover) {
      border-bottom-color: var(--accent);
    }

    main :global(strong) {
      font-weight: 600;
      color: var(--text);
    }

    main :global(em) {
      font-style: italic;
    }

    main :global(code) {
      background: var(--code-bg);
      color: var(--code-text);
      padding: 0.2em 0.4em;
      border-radius: 4px;
      font-size: 0.9em;
      font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', 'Consolas', monospace;
    }

    main :global(pre) {
      background: var(--code-bg);
      color: var(--code-text);
      padding: 1.5rem;
      border-radius: 8px;
      overflow-x: auto;
      margin: 2rem 0;
      line-height: 1.5;
    }

    main :global(pre code) {
      background: none;
      padding: 0;
      font-size: 0.875rem;
    }

    main :global(ul),
    main :global(ol) {
      margin: 1.5rem 0;
      padding-left: 1.5rem;
    }

    main :global(li) {
      margin-bottom: 0.5rem;
    }

    main :global(blockquote) {
      border-left: 3px solid var(--accent);
      padding-left: 1.5rem;
      margin: 2rem 0;
      color: var(--text-secondary);
      font-style: italic;
    }

    main :global(hr) {
      border: none;
      height: 1px;
      background: var(--border);
      margin: 3rem 0;
    }

    main :global(img) {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      margin: 2rem 0;
    }

    @media (max-width: 768px) {
      .container {
        padding: 3rem 1.25rem;
      }

      h1 {
        font-size: 2rem;
      }

      main {
        font-size: 1rem;
      }

      main :global(h1) { font-size: 1.75rem; }
      main :global(h2) { font-size: 1.5rem; }
      main :global(h3) { font-size: 1.25rem; }

      main :global(pre) {
        padding: 1rem;
        margin: 1.5rem -1.25rem;
        border-radius: 0;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <a href="/" class="back-link">Home</a>
      <h1>{title}</h1>
      <time>{date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</time>
    </header>
    <main>
      <slot />
    </main>
  </div>
</body>
</html>
