---
interface Props {
  title: string;
  description: string;
  date: Date;
}

const { title, description, date } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --bg: #faf8f5;
      --text: #3d3929;
      --text-secondary: #73695f;
      --accent: #9b6b3f;
      --border: #e0dbd3;
      --code-bg: #f0ede7;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #1a1815;
        --text: #d4cfc5;
        --text-secondary: #8a8479;
        --accent: #c99567;
        --border: #2d2a24;
        --code-bg: #221f1a;
      }
    }

    body {
      font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Consolas', 'Courier New', monospace;
      font-size: 14px;
      line-height: 1.8;
      background: var(--bg);
      color: var(--text);
      max-width: 650px;
      margin: 0 auto;
      padding: 3rem 1.5rem;
    }

    header {
      margin-bottom: 3rem;
    }

    .back {
      color: var(--text-secondary);
      text-decoration: none;
      display: block;
      margin-bottom: 1.5rem;
    }

    .back:hover {
      color: var(--accent);
    }

    h1 {
      font-size: 18px;
      font-weight: 400;
      margin-bottom: 0.5rem;
    }

    time {
      color: var(--text-secondary);
      font-size: 13px;
    }

    main {
      line-height: 1.8;
    }

    main :global(h1),
    main :global(h2),
    main :global(h3) {
      font-size: 16px;
      font-weight: 400;
      margin: 2rem 0 1rem 0;
    }

    main :global(p) {
      margin-bottom: 1rem;
    }

    main :global(a) {
      color: var(--accent);
      text-decoration: none;
    }

    main :global(a:hover) {
      text-decoration: underline;
    }

    main :global(strong) {
      font-weight: 600;
    }

    main :global(code) {
      background: var(--code-bg);
      padding: 0.15em 0.3em;
      border-radius: 3px;
    }

    main :global(pre) {
      background: var(--code-bg);
      padding: 1rem;
      overflow-x: auto;
      margin: 1.5rem 0;
      border-radius: 3px;
    }

    main :global(pre code) {
      background: none;
      padding: 0;
    }

    main :global(ul),
    main :global(ol) {
      margin: 1rem 0;
      padding-left: 2rem;
    }

    main :global(li) {
      margin-bottom: 0.5rem;
    }

    main :global(blockquote) {
      border-left: 2px solid var(--border);
      padding-left: 1rem;
      margin: 1.5rem 0;
      color: var(--text-secondary);
    }

    main :global(hr) {
      border: none;
      border-top: 1px solid var(--border);
      margin: 2rem 0;
    }

    @media (max-width: 768px) {
      body {
        padding: 2rem 1rem;
      }
    }
  </style>
</head>
<body>
  <header>
    <a href="/" class="back">‚Üê back</a>
    <h1>{title}</h1>
    <time>{date.toISOString().split('T')[0]}</time>
  </header>
  <main>
    <slot />
  </main>
</body>
</html>
