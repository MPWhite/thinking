---
import '../styles/theme.css';

interface Props {
  title: string;
  description: string;
  date: Date;
}

const { title, description, date } = Astro.props;
const formattedDate = new Intl.DateTimeFormat('en-US', { dateStyle: 'medium' }).format(date);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
</head>
<body>
  <main class="glass-shell article-shell">
    <a class="back-link" href="/">Home</a>
    <article class="post-article">
      <header class="post-article__header">
        <span class="post-article__meta">{formattedDate}</span>
        <h1 class="post-article__title">{title}</h1>
        <p class="post-article__description">{description}</p>
      </header>
      <div class="post-body">
        <slot />
      </div>
    </article>
  </main>
</body>
</html>
